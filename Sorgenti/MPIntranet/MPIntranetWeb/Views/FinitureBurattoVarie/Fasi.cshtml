using MPIntranet.Models.Common

@{
    ViewBag.Title = "Fasi";
    Layout = "~/Views/Shared/_LayoutApplication.cshtml";

}

<div class="content-top">
    <h2>Gestione Fasi</h2>
</div>
@if ((ViewData["MenuAbilitati"] as List<decimal>).Contains(330))
{
    <div class="row col-lg-12">
        <table class="table">
            <thead>
                <tr>
                    <th>Codice</th>
                    <th>Descrizione</th>
                    <th>Ricarico</th>
                    <th>Costo Orario</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.TextBox("txtCodice", null, new { @class = "form-control input-sm", @id = "txtCodice", @maxlength = "10" })
                    </td>
                    <td>
                        @Html.TextBox("txtDescrizione", null, new { @class = "form-control input-sm", @id = "txtDescrizione", @maxlength = "30" })
                    </td>
                    <td>
                        @Html.TextBox("txtRicarico", null, new { @class = "form-control input-sm", @id = "txtRicarico" })
                    </td>
                    <td>
                        @Html.TextBox("txtCostoOrario", null, new { @class = "form-control input-sm", @id = "txtCostoOrario" })
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="row col-lg-2">
        <div style="display:inline-block; width:50%">
            <input type="button" onclick="AggiungiNuovo();" class="btn btn-primary" value="Nuova Fase" />
        </div>
    </div>
}
<label class="text-red input-sm" id="lblMessage"></label>
<br />
<div class="col-md-12" id="divRisultati">

</div>

<script language="javascript" type="text/javascript">
    $(function () {
        
        caricaDati();
    });
     function CancellaFasi(IdFbvFasi) {

     var url = '@Url.Action("CancellaFasi", "FinitureBurattovarie")';
            $.ajax({
                url: url,
                data: {
                    IdFbvFasi: IdFbvFasi
                },
                cache: false,
                type: "POST",
                success: function (data)
                {
                    caricaDati();
                },
                error: function (response)
                {
                    document.open();
                    document.write(response.responseText);
                    document.close();
                }
            });
    }

     function caricaDati() {
         var url = '@Url.Action("CaricaFasi", "FinitureBurattovarie")';
        $.ajax({
            url: url,
            data: {
            },
            cache: false,
            type: "POST",
            success: function (data)
            {
                $('#divRisultati').html(data).show();
            },
            error: function (response)
            {
                document.open();
                document.write(response.responseText);
                document.close();
            }
        });
    }

    function AggiungiNuovo() {
        var Codice = $('#txtCodice').val();
        var Descrizione = $('#txtDescrizione').val();
        var Ricarico = $('#txtRicarico').val();
        var CostoOrario = $('#txtCostoOrario').val();
        

        var esito = true;
        var messaggio = '';

        if (Codice == '') {
            esito = false;
            messaggio += MESSAGGIO_PUNTINO + " " + "Codice" + " " + MESSAGGIO_DEVE_ESSERE_VALORIZZATO + "</br>";
        }

        if (Descrizione == '') {
            esito = false;
            messaggio += MESSAGGIO_PUNTINO + " " + "Descrizione" + " " + MESSAGGIO_DEVE_ESSERE_VALORIZZATO + "</br>";
        }

        if (Ricarico == '') {
            esito = false;
            messaggio += MESSAGGIO_PUNTINO + " " + "Ricarico" + " " + MESSAGGIO_DEVE_ESSERE_VALORIZZATO + "</br>";
        }

        if (CostoOrario == '') {
            esito = false;
            messaggio += MESSAGGIO_PUNTINO + " " + "CostoOrario" + " " + MESSAGGIO_DEVE_ESSERE_VALORIZZATO + "</br>";
        }

        $('#lblMessage').html(messaggio);
        if (!esito) return;

         var url = '@Url.Action("CreaFasi", "FinitureBurattovarie")';
        $.ajax({
            url: url,
            data: {
                Codice: Codice,
                Descrizione: Descrizione,
                Ricarico: Ricarico,
                CostoOrario: CostoOrario,

            },
            cache: false,
            type: "POST",
            success: function (data) {

                if (data == null || data == '') {
                    caricaDati();
                }
                else {
                    $('#lblMessage').html(data);
                }
            },
            error: function (response) {
                document.open();
                document.write(response.responseText);
                document.close();
            }
        });
    }

    function ModificaFasi(sender, IdFbvFasi) {
        var parent = $(sender).closest('tr');
        var tds = parent.find('td');

        var Codice = $(parent).find('#txtCodiceS').val();
        var Descrizione = $(parent).find('#txtDescrizioneS').val();
        var Ricarico = $(parent).find('#txtRicaricoS').val();
        var CostoOrario = $(parent).find('#txtCostoOrarioS').val();

        var esito = true;
        var messaggio = '';

        if (Codice == '') {
            esito = false;
            messaggio += MESSAGGIO_PUNTINO + " " + "Codice" + " " + MESSAGGIO_DEVE_ESSERE_VALORIZZATO + "</br>";
        }

        if (Descrizione == '') {
            esito = false;
            messaggio += MESSAGGIO_PUNTINO + " " + "Descrizione" + " " + MESSAGGIO_DEVE_ESSERE_VALORIZZATO + "</br>";
        }

        if (Ricarico == '') {
            esito = false;
            messaggio += MESSAGGIO_PUNTINO + " " + "Ricarico" + " " + MESSAGGIO_DEVE_ESSERE_VALORIZZATO + "</br>";
        }

        if (CostoOrario == '') {
            esito = false;
            messaggio += MESSAGGIO_PUNTINO + " " + "CostoOrario" + " " + MESSAGGIO_DEVE_ESSERE_VALORIZZATO + "</br>";
        }

         $('#lblMessage').html(messaggio);

    if (!esito) return;

     var url = '@Url.Action("ModificaFasi", "FinitureBurattovarie")';
        $.ajax({
            url: url,
            data: {
                IdFbvFasi: IdFbvFasi,
                Codice: Codice,
                Descrizione: Descrizione,
                Ricarico: Ricarico,
                CostoOrario: CostoOrario,

           },
            cache: false,
            type: "POST",
            success: function (data)
            {

                if (data == null || data == '') {
                    caricaDati();
                }
                else {
                    $('#lblMessage').html(data);
                }
            },
            error: function (response)
            {
                document.open();
                document.write(response.responseText);
                document.close();
            }
        });   
    }
</script>
