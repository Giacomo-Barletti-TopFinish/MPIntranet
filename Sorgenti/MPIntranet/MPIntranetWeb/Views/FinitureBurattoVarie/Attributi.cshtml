@using MPIntranet.Models.Common
@{
    ViewBag.Title = "Attributi";
    Layout = "~/Views/Shared/_LayoutApplication.cshtml";
}

<div class="content-top">
    <h2>Gestione Attributi</h2>
</div>

<div class="content-scheda" style="overflow-y:auto; overflow-x:hidden; height:700px">
    @if ((ViewData["MenuAbilitati"] as List<decimal>).Contains(321))
    {
        <div class="row col-lg-6">
            @Html.Label("Selezionare la Proprieta")
            @Html.DropDownList("ddlProprieta", new SelectList(@ViewData["Proprieta"] as List<MPIntranetListItem>, "Value", "Text"), new { @class = "form-control input-sm", @id = "ddlProprieta" })
        </div>
        <div class="row col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th width="20%">Codice</th>
                        <th width="30%">Descrizione</th>
                        <th></th>
                        <th></th>
                        <td></td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td width="20%">
                            @Html.TextBox("txtCodice", null, new { @class = "form-control input-sm", @id = "txtCodice", @maxlength = "10" })
                        </td>
                        <td width="30%">
                            @Html.TextBox("txtDescrizione", null, new { @class = "form-control input-sm", @id = "txtDescrizione", @maxlength = "30" })
                        </td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="row col-lg-2">
            <div style="display:inline-block; width:50%">
                <input type="button" onclick="AggiungiNuovo();" class="btn btn-primary" value="Nuovo Attributo" />
            </div>
        </div>
    }
    <label class="text-red input-sm" id="lblMessage"></label>
    <br />
    <div class="col-md-12" id="divRisultati">

    </div>
</div>

<script language="javascript" type="text/javascript">
    $(function () {
        $("#ddlProprieta").change(function () {
            var selectedText = $(this).find("option:selected").text();
            var selectedValue = $(this).val();
            caricaDati();
        });

        $('#ddlProprieta').val('1').trigger("change");
    });

function CancellaAttributi(IdFbvAttributi) {
     var url = '@Url.Action("CancellaAttributi", "FinitureBurattovarie")';
            $.ajax({
                url: url,
                data: {
                    IdFbvAttributi: IdFbvAttributi
                },
                cache: false,
                type: "POST",
                success: function (data)
                {
                    caricaDati();
                },
                error: function (response)
                {
                    document.open();
                    document.write(response.responseText);
                    document.close();
                }
            });     
    }

    function caricaDati() {
        IdFbvProprieta = $('#ddlProprieta').val();
         var url = '@Url.Action("CaricaAttributi", "FinitureBurattovarie")';
        $.ajax({
            url: url,
            data: {
                IdFbvProprieta: IdFbvProprieta
            },
            cache: false,
            type: "POST",
            success: function (data)
            {
                $('#divRisultati').html(data).show();
            },
            error: function (response)
            {
                document.open();
                document.write(response.responseText);
                document.close();
            }
        });
    }

    function AggiungiNuovo() {
        var Codice = $('#txtCodice').val();
        var Descrizione = $('#txtDescrizione').val();
        var IdFbvProprieta = $('#ddlProprieta').val();

        var esito = true;
        var messaggio = '';

        if (Codice == '') {
            esito = false;
            messaggio += MESSAGGIO_PUNTINO + " " + "Codice" + " " + MESSAGGIO_DEVE_ESSERE_VALORIZZATO + "</br>";
        }

        if (Descrizione == '') {
            esito = false;
            messaggio += MESSAGGIO_PUNTINO + " " + "Descrizione" + " " + MESSAGGIO_DEVE_ESSERE_VALORIZZATO + "</br>";
        }

        $('#lblMessage').html(messaggio);
        if (!esito) return;
        
        var url = '@Url.Action("CreaAttributi", "FinitureBurattovarie")';
        $.ajax({
            url: url,
            data: {
                Codice: Codice,
                Descrizione: Descrizione,
                IdFbvProprieta: IdFbvProprieta

            },
            cache: false,
            type: "POST",
            success: function (data)
            {

                if (data == null || data == '') {
                    caricaDati();
                }
                else {
                    $('#lblMessage').html(data);
                }
            },
            error: function (response)
            {
                document.open();
                document.write(response.responseText);
                document.close();
            }
        });
    }

    function ModificaAttributi(sender, IdFbvAttributi) {
        var parent = $(sender).closest('tr');
        var tds = parent.find('td');

        var Codice = $(parent).find('#txtCodiceS').val();
        var Descrizione = $(parent).find('#txtDescrizioneS').val();


        var esito = true;
        var messaggio = '';

        if (Codice == '') {
            esito = false;
            messaggio += MESSAGGIO_PUNTINO + " " + "Codice" + " " + MESSAGGIO_DEVE_ESSERE_VALORIZZATO + "</br>";
        }

        if (Descrizione == '') {
            esito = false;
            messaggio += MESSAGGIO_PUNTINO + " " + "Descrizione" + " " + MESSAGGIO_DEVE_ESSERE_VALORIZZATO + "</br>";
        }

        $('#lblMessage').html(messaggio);
        if (!esito) return;

        var url = '@Url.Action("ModificaAttributi", "FinitureBurattovarie")';
        $.ajax({
            url: url,
            data: {
                IdFbvAttributi: IdFbvAttributi,
                Codice: Codice,
                Descrizione: Descrizione,
                
           },
            cache: false,
            type: "POST",
            success: function (data)
            {

                if (data == null || data == '') {
                    caricaDati();
                }
                else {
                    $('#lblMessage').html(data);
                }
            },
            error: function (response)
            {
                document.open();
                document.write(response.responseText);
                document.close();
            }
        });
    }
</script>