
@using MPIntranet.Models.Finiture_Burattovarie
@model List<AttributiModel>

@if (Model != null && Model.Count() == 0)
{
    <text><b>Nessun risultato trovato</b></text>
}
else
{
    <table id="grigliaRisultati" class="table table-condensed table-hover">
        <thead style="background-color:aliceblue">
            <tr>
                <th width="20%">Codice</th>
                <th width="30%">Descrizione</th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (AttributiModel td in Model)
            {
            <tr>
                <td width="20%">
                    @Html.TextBox("txtCodiceS", td.Codice, new { @class = "form-control input-sm", @id = "txtCodiceS", @maxlength = "10" })
                </td>
                <td width="30%">
                    @Html.TextBox("txtDescrizioneS", td.Descrizione, new { @class = "form-control input-sm", @id = "txtDescrizioneS", @maxlength = "30" })
                </td>
               
                <td align="right">
                    @if ((ViewData["MenuAbilitati"] as List<decimal>).Contains(323))
                    {
                        <a onclick="ModificaAttributi(this,@td.IdFbvAttributi)" title="Modifica"><i class="fa fa-fw fa-pencil"></i></a>
                    }
                </td>
                <td align="right">
                    @if ((ViewData["MenuAbilitati"] as List<decimal>).Contains(322))
                    {
                        <a onclick="CancellaAttributi(@td.IdFbvAttributi)" title="Cancella"><i class="fa fa-fw fa-remove"></i></a>
                    }
                </td>
                <td></td>
                <td> </td>
            </tr>

            }
        </tbody>
    </table>
}


