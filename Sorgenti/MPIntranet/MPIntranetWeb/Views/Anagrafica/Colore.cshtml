@using MPIntranet.Models.Common
@{
    ViewBag.Title = "Colori";
    Layout = "~/Views/Shared/_LayoutApplication.cshtml";
}


<div class="content-top">
    <h2>Gestione Colori</h2>
</div>
<div class="content-scheda">
    @if ((ViewData["MenuAbilitati"] as List<decimal>).Contains(19))
    {
        <div class="row col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th width="10%">Brand</th>
                        <th width="23%">Descrizione</th>
                        <th width="6%">Codice cliente</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td width="10%">
                            @Html.DropDownList("ddlBrand", new SelectList(ViewData["dllBrand"] as List<MPIntranetListItem>, "Value", "Text"), new { @class = "form-control input-sm", @style = "height: 21px;" })
                        </td>
                        <td width="23%">
                            @Html.TextBox("txtDescrizione", null, new { @class = "form-control input-sm ", @id = "txtDescrizione", @maxlength = "40" })
                        </td>
                        <th width="6%">
                            @Html.TextBox("txtCodiceCliente", null, new { @class = "form-control input-sm ", @id = "txtCodiceCliente", @maxlength = "8" })
                        </th>
                        <td></td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="row col-lg-2">
            <div style="display:inline-block; width:50%">
                <input type="button" onclick="AggiungiNuovo();" class="btn btn-primary" value="Nuovo colore" />
            </div>
        </div>
    }
        <div class="row">
            <label class="text-red input-sm" id="lblMessage"></label>
            <br />
        </div>
    <div class="box box-primary">
        <div class="box-header with-border">
            <h4 class="box-title text-bold">Ricerca</h4>
            <div class="box-tools pull-right">
                <button id="btnCollapseAccessori" type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-chevron-up"></i></button>
            </div>
        </div>
        <div class="box-body">
            <table class="table">
                <thead>
                    <tr>
                        <th width="10%">Brand</th>
                        <th width="8%">Codice</th>
                        <th width="23%">Descrizione</th>
                        <th width="6%">Figurativo</th>
                        <th width="6%">Codice cliente</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td width="10%">
                            @Html.DropDownList("ddlBrandR", new SelectList(ViewData["dllBrand"] as List<MPIntranetListItem>, "Value", "Text"), new { @class = "form-control input-sm", @style = "height: 21px;" })
                        </td>
                        <td width="8%">
                            @Html.TextBox("txtCodiceR", null, new { @class = "form-control input-sm ", @id = "txtCodiceR", @maxlength = "3" })
                        </td>
                        <td width="23%">
                            @Html.TextBox("txtDescrizioneR", null, new { @class = "form-control input-sm ", @id = "txtDescrizioneR", @maxlength = "40" })
                        </td>
                        <th width="6%">
                            @Html.TextBox("txtFigurativoR", null, new { @class = "form-control input-sm ", @id = "txtFigurativoR", @maxlength = "10" })
                        </th>
                        <th width="6%">
                            @Html.TextBox("txtCodiceClienteR", null, new { @class = "form-control input-sm ", @id = "txtCodiceClienteR", @maxlength = "8" })
                        </th>
                        <td><a class="spciconbtn" onclick="caricaDati()"><i class="fa fa-search input-sm"></i></a></td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <br />
    <div class="col-md-12" id="divRisultati" style="overflow-y:auto; overflow-x:hidden; height:500px">

    </div>
</div>

<script language="javascript" type="text/javascript">
    $(function ()
    {
        caricaDati();
    });

    function CancellaColore(idColore) {
     var url = '@Url.Action("RimuoviColore", "Anagrafica")';
            $.ajax({
                url: url,
                data: {
                    idColore: idColore
                },
                cache: false,
                type: "POST",
                success: function (data)
                {
                    caricaDati();
                },
                error: function (response)
                {
                    document.open();
                    document.write(response.responseText);
                    document.close();
                }
            });
    }

    function caricaDati() {
        var idBrand = $('#ddlBrandR').val();
        var codice = $('#txtCodiceR').val();
        var descrizione = $('#txtDescrizioneR').val();
        var figurativo = $('#txtFigurativoR').val();
        var codiceCliente = $('#txtCodiceClienteR').val();
        var url = '@Url.Action("CaricaColori", "Anagrafica")';
        $.ajax({
            url: url,
            data: {
                idBrand: idBrand,
                codice: codice,
                descrizione: descrizione,
                figurativo: figurativo,
                codiceCliente: codiceCliente
            },
            cache: false,
            type: "POST",
            success: function (data)
            {
                $('#divRisultati').html(data).show();
            },
            error: function (response)
            {
                document.open();
                document.write(response.responseText);
                document.close();
            }
        });
    }

    function AggiungiNuovo()
    {
        var brand = $('#ddlBrand').val();
        var descrizione = $('#txtDescrizione').val();
        var codiceCliente = $('#txtCodiceCliente').val();

        var esito = true;
        var messaggio = '';

        if (brand =='-1' )
        {
            esito=false;
            messaggio += MESSAGGIO_PUNTINO + " " + "Brand" + " " + MESSAGGIO_DEVE_ESSERE_VALORIZZATO + "</br>";
        }

        if (descrizione == '') {
            esito = false;
            messaggio += MESSAGGIO_PUNTINO + " " + "Descrizione" + " " + MESSAGGIO_DEVE_ESSERE_VALORIZZATO + "</br>";
        }

        if (codiceCliente == '') {
            esito = false;
            messaggio += MESSAGGIO_PUNTINO + " " + "Codice cliente" + " " + MESSAGGIO_DEVE_ESSERE_VALORIZZATO + "</br>";
        }

        $('#lblMessage').html(messaggio);
        if(!esito) return;


        var url = '@Url.Action("CreaColore", "Anagrafica")';
        $.ajax({
            url: url,
            data: {
                descrizione: descrizione,
                codiceCliente: codiceCliente,
                idBrand: brand
            },
            cache: false,
            type: "POST",
            success: function (data)
            {

                if (data == null || data == '') {
                    caricaDati();
                }
                else {
                    $('#lblMessage').html(data);
                }
            },
            error: function (response)
            {
                document.open();
                document.write(response.responseText);
                document.close();
            }
        });
    }

    function ModificaColore(sender, idColore)
    {
          var parent = $(sender).closest('tr');
          var tds = parent.find('td');

        var descrizione = $(parent).find('#txtDescrizioneS').val();

        var esito = true;
        var messaggio = '';

        if (descrizione == '') {
            esito = false;
            messaggio += MESSAGGIO_PUNTINO + " " + "Descrizione" + " " + MESSAGGIO_DEVE_ESSERE_VALORIZZATO + "</br>";
        }

        $('#lblMessage').html(messaggio);
        if(!esito) return;


        var url = '@Url.Action("ModificaColore", "Anagrafica")';
        $.ajax({
            url: url,
            data: {
                idColore: idColore,
                descrizione: descrizione,
            },
            cache: false,
            type: "POST",
            success: function (data)
            {

                if (data == null || data == '') {
                    caricaDati();
                }
                else {
                    $('#lblMessage').html(data);
                }
            },
            error: function (response)
            {
                document.open();
                document.write(response.responseText);
                document.close();
            }
        });
    }
</script>
