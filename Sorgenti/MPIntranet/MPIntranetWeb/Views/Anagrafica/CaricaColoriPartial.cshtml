
@using MPIntranet.Models.Anagrafica
@model List<ColoreModel>

@if (Model != null && Model.Count() == 0)
{
    <text><b>Nessun risultato trovato</b></text>
}
else
{
    <table id="grigliaRisultati" class="table table-condensed table-hover">
        <thead style="background-color:aliceblue">
            <tr>
                <th width="10%">Brand</th>
                <th width="8%">Codice</th>
                <th width="23%">Descrizione</th>
                <th width="6%">Figurativo</th>
                <th width="6%">Codice cliente</th>
                <th width="2%"></th>
                <th width="2%"></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (ColoreModel col in Model)
            {
                <tr>
                    <td width="10%">
                        @col.Brand
                    </td>
                    <th width="8%">
                        @col.Codice
                    </th>
                    <th width="23%">
                        @Html.TextBox("txtDescrizioneS", col.Descrizione, new { @class = "form-control input-sm", @id = "txtDescrizioneS", @maxlength = "40" })
                    </th>
                    <th width="6%">
                        @col.CodiceFigurativo
                    </th>
                    <th width="6%">
                        @col.CodiceCliente
                    </th>
                    <td align="right">
                        @if ((ViewData["MenuAbilitati"] as List<decimal>).Contains(21))
                        {
                            <a onclick="ModificaColore(this,@col.IdColore)" title="Modifica"><i class="fa fa-fw fa-pencil"></i></a>
                        }
                    </td>
                    <td align="right">
                        @if ((ViewData["MenuAbilitati"] as List<decimal>).Contains(20))
                        {
                            <a onclick="CancellaColore(@col.IdColore)" title="Cancella"><i class="fa fa-fw fa-remove"></i></a>
                        }
                    </td>
                    <td></td>
                </tr>

            }
        </tbody>
    </table>
}

