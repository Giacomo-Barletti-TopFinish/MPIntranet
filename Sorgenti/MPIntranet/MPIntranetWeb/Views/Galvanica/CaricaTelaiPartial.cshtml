
@using MPIntranet.Models.Galvanica
@model List<TelaioModel>

@if (Model != null && Model.Count() == 0)
{
    <text><b>Nessun risultato trovato</b></text>
}
else
{
    <table id="grigliaRisultati" class="table table-condensed table-hover">
        <thead style="background-color:aliceblue">
            <tr>
                <th width="15%">Codice</th>
                <th width="10%">Pezzi</th>
                <th width="15%">Tipo montaggio</th>
                <th width="10%">Costo standard</th>
                <th width="2%"></th>
                <th width="2%"></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (TelaioModel td in Model)
            {
                <tr>
                    <td>
                        @td.Codice
                    </td>
                    <td>
                        @td.Pezzi
                    </td>
                    <td>
                        @td.TipoMontaggio
                    </td>
                    <td>
                        @Html.TextBox("txtCostoS", @td.CostoStandard, new { @class = "form-control input-sm corrente", @onkeypress = "return FilterDecimal(event,this)", @oninput = "onDecimalInput(this,7,4)" })
                    </td>
                    <td align="right">
                        @if ((ViewData["MenuAbilitati"] as List<decimal>).Contains(53))
                        {
                            <a onclick="ModificaTelaio(this,@td.IdTelaio)" title="Modifica"><i class="fa fa-fw fa-pencil"></i></a>
                        }
                    </td>
                    <td align="right">
                        @if ((ViewData["MenuAbilitati"] as List<decimal>).Contains(52))
                        {
                            <a onclick="CancellaTelaio(@td.IdTelaio)" title="Cancella"><i class="fa fa-fw fa-remove"></i></a>
                        }
                    </td>
                    <td></td>
                </tr>

            }
        </tbody>
    </table>
}


