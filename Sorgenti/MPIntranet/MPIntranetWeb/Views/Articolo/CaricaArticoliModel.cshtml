
@using MPIntranet.Models.Articolo
@model List<ArticoloModel>

@if (Model != null && Model.Count() == 0)
{
    <text><b>Nessun risultato trovato</b></text>
}
else
{
    <table id="grigliaRisultati" class="table table-condensed table-hover">
        <thead style="background-color:aliceblue">
            <tr>
                <th width="10%"></th>
                <th width="10%">Codice SAM</th>
                <th width="5%">Progressivo</th>
                <th width="10%">Modello</th>
                <th width="5%">Codice cliente</th>
                <th width="20%">Descrizione</th>
                <th width="10%">Brand</th>
                <th width="8%">Colore</th>
                <th width="8%">Colore figurativo</th>
                <th width="2%"></th>
                <th width="2%"></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (ArticoloModel td in Model)
            {
                <tr>
                    <td>
                        <div class="spcDivImg" style="width:140px; height:140px; background-color:white; white-space: nowrap; text-align: center;">
                            <span style="display: inline-block; height: 100%; vertical-align: middle;"></span>
                            <a href="@Url.Action(ViewData["ActionName"] as string, ViewData["ControllerName"] as string, new { idArticolo = td.IdArticolo})">
                                @if (!string.IsNullOrEmpty(@td.ImageUrl))
                                {
                                    <img src="@Url.Content(@td.ImageUrl)" style="max-height:150px; max-width:150px; vertical-align: middle; margin-left: -4px; padding:4px" alt="Image" />
                                }
                            </a>
                        </div>
                    </td>
                    <td width="5%">@td.CodiceSAM</td>
                    <td width="5%">@td.ProgressivoSAM</td>
                    <td width="10%">@td.Modello</td>
                    <td width="5%">@td.CodiceCliente</td>
                    <td width="20%">@td.Descrizione</td>
                    <td width="10%">@td.Brand.Brand</td>
                    <td width="8%">@td.Colore.Codice</td>
                    <td width="8%">@td.Colore.CodiceFigurativo</td>
                    <td width="2%"></td>
                    <td width="2%"></td>
                    <td></td>
                </tr>
                <tr>
                    <td colspan="12">
                        <hr style="margin-bottom:10px; margin-top:10px !important" />
                    </td>
                </tr>

            }
        </tbody>
    </table>
}

