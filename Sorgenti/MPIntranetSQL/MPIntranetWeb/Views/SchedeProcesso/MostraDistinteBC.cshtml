@using MPIntranet.Business
@model List<DistintaBC>



@if (Model != null && Model.Count() == 0)
{
    <text><b>Nessun risultato trovato</b></text>
}
else
{
    <table id="grigliaRisultati" class="table table-condensed table-hover">
        <thead style="background-color:aliceblue">
            <tr>
                <th width="10%"></th>
                <th width="15%">Codice</th>
                <th width="10%">Versione</th>
                <th width="25%">Descrizione </th>
                <th width="25%">Descrizione 2</th>
                <th width="2%"></th>
                <th width="2%"></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (DistintaBC td in Model)
            {
                <tr>
                    <td>
                        <a onClick="EstraiDistinta('@td.Codice', '@td.Versione')">
                            Seleziona
                        </a>
                    </td>
                    <td width="15%">@td.Codice</td>
                    <td width="10%">@td.Versione</td>
                    <td width="25%">@td.Descrizione</td>
                    <td width="25%">@td.Descrizione2</td>
                    <td width="2%"></td>
                    <td width="2%"></td>
                    <td></td>
                </tr>
                <tr>
                    <td colspan="12">
                        <hr style="margin-bottom:10px; margin-top:10px !important" />
                    </td>
                </tr>

            }
        </tbody>
    </table>
}
