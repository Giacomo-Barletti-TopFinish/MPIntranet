@using MPIntranet.Business.SchedeProcesso
@model SPMasters

<div>
    @foreach (SPElemento elemento in Model.Elementi)
    {
    <div class="row">
        @if (elemento.Tipo == TipoSPElemento.SESSIONE)
        {
            <h3 style="background-color:lightgray">@elemento.Testo</h3>
        }
        else
        {
            switch (elemento.Controllo.Tipo)
            {
                case TipoSPControllo.CHECKBOX:
                    {
                        <div class="col-lg-3"><label>@elemento.Controllo.Descrizione</label></div>
                        <div class="col-lg-4"><input type="checkbox" id="@elemento.IdSPElemento.ToString()" /></div>

                        break;
                    }
                case TipoSPControllo.DATA:
                    {
                        <div class="col-lg-3"><label>@elemento.Controllo.Descrizione</label></div>
                        <div class="col-lg-4"><input type="date" id="@elemento.IdSPElemento.ToString()" /></div>
                        break;
                    }
                case TipoSPControllo.LISTA:
                    {

                        <div class="col-lg-3"><label>@elemento.Controllo.Descrizione</label></div>
                        <div class="col-lg-4">
                            <select id="@elemento.IdSPElemento.ToString()">
                                <option value=""></option>
                                @foreach (SPElementoLista listItem in elemento.Controllo.Elementi)
                                {
                                    <option value="@listItem.Codice">@listItem.Descrizione</option>
                                }
                            </select>
                        </div>
                        break;
                    }
                case TipoSPControllo.NUMERO:
                    {
                        <div class="col-lg-3"><label>@elemento.Controllo.Descrizione</label></div>
                        <div class="col-lg-4"><input type="number" id="@elemento.IdSPElemento.ToString()" /></div>

                        break;
                    }
                case TipoSPControllo.TESTO:
                    {
                        <div class="col-lg-3"><label>@elemento.Controllo.Descrizione</label></div>
                        <div class="col-lg-4"><input type="text" id="@elemento.IdSPElemento.ToString()" /></div>
                        break;
                    }

            }
        }
    </div>
    }
    </div>