@using MPIntranet.Business.SchedeProcesso
@model List<SPElemento>

<div class="col-lg-12">
    <h4>ELEMENTI OBBLIGATORI</h4>
    <div id="divListaElementiObbligatori" class="content-searchSPC">
        <table id="grigliaValoriObbligatori" class="table table-condensed table-hover">
            <thead>
                <tr>
                    <th width="40%">Elemento</th>
                    <th width="10%">Tipo</th>
                    <th width="10%">Obbligatorio</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (SPElemento elemento in Model)
                {
                    <tr>
                        <td width="40%">@elemento.Testo</td>
                        <td width="10%">@elemento.Tipo</td>
                        <td width='10%'>
                            <input type='checkbox' id='checkbox' disabled="disabled" @if (elemento.Obbligatorio) { <text> checked</text> } />
                        </td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>