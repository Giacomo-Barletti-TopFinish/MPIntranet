@using MPIntranet.Business.SchedeProcesso
@model List<SpScheda>


@if (Model != null && Model.Count() == 0)
{
    <text><b>Nessun risultato trovato</b></text>
}
else
{
    <table id="grigliaRisultati" class="table table-condensed table-hover">
        <thead style="background-color:aliceblue">
            <tr>
                <th width="10%"></th>
                <th width="5%">Codice</th>
                <th width="10%">Anagrafica</th>
                <th width="10%">Area produzione</th>
                <th width="10%">Task</th>
                <th width="25%">Descrizione</th>
                <th width="2%"></th>
                <th width="2%"></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (SpScheda td in Model)
            {
            <tr>
                <td>
                    <a onClick="EstraiScheda(@td.IdSPScheda)">
                        Seleziona
                    </a>
                </td>
                <th width="5%">@td.Codice</th>
                <th width="10%">@td.Anagrafica</th>
                <th width="10%">@td.AreaProduzione</th>
                <th width="10%">@td.Task</th>
                <th width="25%">@td.Descrizione</th>
                <th width="2%"></th>
                <th width="2%"></th>
                <td></td>
            </tr>
                <tr>
                    <td colspan="12">
                        <hr style="margin-bottom:10px; margin-top:10px !important" />
                    </td>
                </tr>

            }
        </tbody>
    </table>
}



